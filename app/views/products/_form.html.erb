<%= form_with(model: product, local: true) do |form| %>
  <% if product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% product.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="form-group">
    <%= form.label :title %>
    <%= form.text_field :title, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :description %>
    <%= form.text_area :description, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :price %>
    <%= form.text_field :price, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :category_id %>
    <%= form.collection_select :category_id, Category.order(:title), :id, :title, {include_blank: true}, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :subcategory_id %>
    <%= form.grouped_collection_select :subcategory_id, Category.order(:title), :subcategories, :title, :id, :name, {include_blank: true}, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.file_field :image_url %>
  </div>

  <div class="form-group">
    <%= form.check_box :available %>
    <%= form.label :available %>
  </div>

<!--  <div class="form-group">-->
    <%#= form.collection_select :available, Product.availabilities, :second, :first, prompt: 'Выберите доступность', class: 'form-control'  %>
<!--  </div>-->
<!--  <div class="form-group">-->
    <%#= form.radio_button :available, true %>
    <%#= form.label :available, 'In stock', value: true %>
    <%#= form.radio_button :available, false %>
    <%#= form.label :available, 'Out of dsfgstock', value: false %>
<!--  </div>-->

  <div class="form-group">
    <%= form.submit 'Добавить', class: 'btn btn-primary' %>
    <%= link_to 'Назад', :back, class: 'btn btn-outline-secondary' %>
  </div>
<% end %>
