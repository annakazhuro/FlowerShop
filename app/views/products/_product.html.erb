<div class="block">
  <li class="product-wrapper">
    <div class="product" style="background-image: url(<%= product.image_url.url %>);">
      <div class="row">
        <%= link_to product.title, product_path(product.id), style:"margin-right: 40px; margin-left: 10px; font-size: large; margin-left: 50px;", id: 'link-style'%>
        <p style="margin-right: 40px; margin-left: 10px; font-size: large; margin-left: 50px;"> <%= product.price %> </p>
      </div>
      <%= button_to 'Добавить в корзину', line_items_path(product_id: product), class: 'btn btn-change', id:"category-add-btn", remote: true %>
    </div>
  </li>
</div>
